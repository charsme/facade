              "panel": "shared",
              "showReuseMessage": true,
              "clear": false
            }
        },
        {
          "type": "npm",
          "script": "cy:open",
          "group": "test",
          "presentation": {
            "echo": true,
            "reveal": "never",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
          }
        }
    ]
